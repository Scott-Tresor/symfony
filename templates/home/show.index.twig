{% extends 'base.html.twig' %}

{% block title %}Pinterest | {{ pins.titre}} {% endblock %}

{% block body %}
    <article>
        <h2>{{ pins.titre }}</h2>

        <p>
            {{ pins.description }}
        </p>
    </article>
    <a href="{{ path('edit', {id: pins.id}) }}">Edit</a>
    <form id="submit" action="{{ path('delete', {id: pins.id}) }}", method="GET">
        <input type="hidden" name="csrf_token" value="{{ csrf_token('delete' ~ pins.id) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete" >
    </form>
{% endblock %}
